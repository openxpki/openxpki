<div class="alert {{if hasError "alert-danger" "hide"}}">
    {{errors}}
</div>

<div class="container-fluid">
    <form class="form-horizontal" role="form">
        {{#each visibleFields as |field|}}
            {{oxifield-main content=field addClone="addClone" delClone="delClone" valueChange="valueChange"}}
        {{/each}}
        <div class="form-group">
            <div class="col-md-offset-2 col-sm-7">
                <button class="btn btn-default {{if loading "btn-loading"}}" {{action "submit"}}>
                    {{submitLabel}}
                </button>
                {{#if content.content.reset_label}}
                    <button class="btn btn-default" {{action "reset"}}>
                        {{content.content.reset_label}}
                    </button>
                {{/if}}
            </div>
        </div>
    </form>
</div>

{{oxi-button-container buttons=content.content.buttons buttonClick="buttonClick"}}
