<div class="row" {{did-insert @onInsert}}>
    <div class="col-md-8">
        <BsDatetimepicker {{did-insert this.datepickerReady}}
            @date={{this.value}}
            @useCurrent={{if this.value false true}}
            @format={{this.format}}
            @change={{this.datePicked}}
            @openOnFocus={{true}}
            @placeholder={{@content.placeholder}}
            @timeZone={{if (eq this.timezone "local") "" this.timezone}}
        />
    </div>
    <div class="col-md-4">
        <input class="form-control" type="text" placeholder={{t 'component.oxifield_datetime.timezone' tz=this.timezone}} disabled/>
    </div>
</div>
