<!-- components/oxi-section/keyvalue -->
{{#if this.items.length}}
    <div class="container-fluid oxi-keyvalue">
        {{#each this.items as |item|}}
            <div class="row {{item.className}} py-1 px-2 oxi-keyvalue-head">
            {{#if item.isHead}}
                <div class="col-12 px-0 border-2 border-bottom mt-2 fst-italic">{{item.value}}</div>
            {{else}}
                {{#if this.hasLabels}}
                    <div class="col-auto px-0 text-secondary fw-bold {{if @isInfoBox "oxi-keyvalue-label-infobox" "oxi-keyvalue-label"}}">
                        {{~item.label~}}
                    </div>
                    <div class="col px-2 d-none d-md-block oxi-keyvalue-dots">
                    </div>
                {{/if}}
                <div class="{{if this.hasLabels (if @isInfoBox "col-6" "col-md-7 col-lg-8 col-xl-9") "col-12"}} px-2 ms-3 ms-md-0">
                    {{#if item.preamble}}<i>{{item.preamble}}</i><br/>{{/if}}
                    <OxiBase::Formatted
                        @format={{item.format}}
                        @value={{item.value}}
                        @truncate={{@isInfoBox}}
                        @class={{if item._refreshing "refreshing"}}
                    />
                </div>
            {{/if}}
            </div>
        {{/each}}
    </div>
    <OxiBase::ButtonContainer @buttons={{@def.buttons}} />
{{/if}}
