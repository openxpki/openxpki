<!-- components/oxi-section/form/field/passwordverify -->
{{#if this.isFixed}}

    <input type="text" class="form-control mb-2"
        value={{this.password}}
        required={{not @content.is_optional}}
        disabled
    />
    <input type="text" class="form-control"
        value={{this.confirm}}
        placeholder={{this.placeholder}}
        required={{not @content.is_optional}}
        {{on "input" this.confirmPasswordChange}}
        {{on-init @setFocusInfo true}}
    />

{{else}}

    <input type="password" class="form-control mb-2"
        value={{this.password}}
        required={{not @content.is_optional}}
        {{on "input" this.passwordChange}}
        {{on-init @setFocusInfo true}}
    />
    <input type="password" class="form-control"
        value={{this.confirm}}
        placeholder={{this.placeholder}}
        required={{not @content.is_optional}}
        {{on "input" this.confirmPasswordChange}}
    />

{{/if}}

{{#if @error}}<div class="invalid-feedback">{{@error}}</div>{{/if}}
