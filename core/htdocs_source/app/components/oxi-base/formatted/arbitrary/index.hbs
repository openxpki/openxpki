{{#if this.isString}}
    <div class={{@class}}>
    {{#if @raw}}
        {{defuse @value}}
    {{else}}
        {{@value}}
    {{/if}}
    </div>
{{else}}
    <BsButton
        @onClick={{this.toggleDetails}}
        @type=""
        class="btn-sm bg-secondary-subtle border-secondary"
    >
        [{{this.type}}]
        {{#if this.detailsOpen}}
            <span class="glyphicon glyphicon-triangle-bottom"></span>
        {{else}}
            <span class="glyphicon glyphicon-triangle-right"></span>
        {{/if}}
    </BsButton>
    {{#if this.detailsOpen}}
        <div class="card card-body bg-secondary-subtle">
            <pre class="text-prewrap {{@class}}">{{this.asJSON}}</pre>
        </div>
    {{/if}}
{{/if}}
