{{!--
The top HTML element in this template has to be <select> as otherwise the calling
components' use of {{on-init @onInsert ...}} would not work.
--}}
{{#if @inline}}
    <span {{on-init this.initSelectTarget}}></span>
{{/if}}
<select
    ...attributes
    class={{this.cssClasses}}
    {{on "oxi-focus" this.focussed}}
    {{on "change" this.listChanged}}
    {{on-init this.startup}}
>
    {{#each @list as |item|}}
        <option value="{{item.value}}" selected={{if (eq item.value @selected) "selected"}}>
            {{item.label}}
        </option>
    {{/each}}
</select>
